{
    "compilerOptions": {
      "target": "es2018",
      "module": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "outDir": "build"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  